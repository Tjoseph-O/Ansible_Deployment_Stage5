# forces HTTP to HTTPS
server {
    listen 80;
    server_name {{ domain }};
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name {{ domain }};

    # SSL paths – Certbot will create these
    ssl_certificate     /etc/letsencrypt/live/{{ domain }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ domain }}/privkey.pem;

    # Recommended security settings
    ssl_protocols       TLSv1.2 TLSv1.3;
    ssl_ciphers         HIGH:!aNULL:!MD5;
    add_header          Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

    # Reverse proxy to your app
    location / {
        proxy_pass         http://127.0.0.1:{{ app_port }};
        proxy_set_header   Host $host;
        proxy_set_header   X-Real-IP $remote_addr;
        proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Proto $scheme;
        proxy_http_version 1.1;
        proxy_set_header   Upgrade $http_upgrade;
        proxy_set_header   Connection "upgrade";
    }

    # Custom log paths – exactly what CloudWatch expects
    access_log /var/log/nginx/{{ project_name }}_{{ env_name }}_access.log;
    error_log  /var/log/nginx/{{ project_name }}_{{ env_name }}_error.log;
}